<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:background="#87000000">

    <ImageView
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:src="@drawable/movie_lv"
        android:id="@+id/movie_lv"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"/>

    <TextView
        android:text="Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_name"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/movie_lv"
        android:layout_toEndOf="@+id/movie_lv"
        android:textSize="@dimen/_20sdp"
        android:textStyle="normal|bold"
        android:textColor="@color/white"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_2sdp" />

    <TextView
        android:text="rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/show_name"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/rating_tv"
        android:textAllCaps="true"
        android:textSize="@dimen/_10sdp"
        android:textColor="@color/white"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_2sdp"/>

    <TextView
        android:text="5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rating_tv"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/show_rating"
        android:textStyle="normal|bold"
        android:textColor="@color/white"
        android:textSize="@dimen/_36sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:layout_marginTop="@dimen/_2sdp"/>

    <TextView
        android:text="Genre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_genre"
        android:textColor="@color/white"
        android:textSize="@dimen/_17sdp"
        android:textStyle="normal|italic"
        android:layout_below="@+id/show_name"
        android:layout_alignLeft="@+id/show_name"
        android:layout_alignStart="@+id/show_name" />

    <TextView
        android:text="Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_date"
        android:textStyle="normal|italic"
        android:textColor="@color/white"
        android:textSize="@dimen/_17sdp"
        android:layout_below="@+id/show_genre"
        android:layout_alignLeft="@+id/show_genre"
        android:layout_alignStart="@+id/show_genre" />

</RelativeLayout>